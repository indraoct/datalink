				'npwp'	=> $data['npwp'],
				'pkp'	=> $data['pkp'],
				'pkp_date'	=> defaultDate($data['pkpDate']),
				'tax'	=> ($data['rInterval']) ? 1 : 0,
				'currency'	=> $data['rCcy'],
				'term_of_payment'	=> $data['rTop'],
