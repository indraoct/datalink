});

Route::group(array('prefix'=>'login','as'=>'login','before'=>'guest'),function()
{
    Route::get('/',function()
	{
        Session::put('page', 'login');
		$param = array(
							'title'			=> 'Login',
							'menu_id'		=> 'login',
							'body_class'	=> 'login'
						);
        return View::make('modules.login',$param);
    });

    Route::post('/', array('uses' => 'AuthController@doLogin'));
});

